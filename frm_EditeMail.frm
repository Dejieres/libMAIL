Private Function VerifEnvoiImmed() As Integer
    Dim s As String, i As Integer

    ' Champs serveur
    If Len(Nz(Me.txtNomSRV, "")) = 0 Then s = Traduit("edm_veimmed01", "   Nom du serveur\n")
    If Len(Nz(Me.txtHELODomain, "")) = 0 Then s = s & Traduit("edm_veimmed02", "    HELODomain\n")

